{% extends 'base.html.twig' %}

{% block title %}New Task{% endblock %}

{% block body %}
    <h1>Create new Task</h1>

    <a class="btn btn-small grey" href="{{ path('task_index') }}">Back to list</a>

    <div class="row">

        {{ form_start(form, {'attr': {'class': 'col s12'}}) }}
            <div class="row">
                <div class="input-field col s12">
                    {{ form_label(form.description) }}
                    {{ form_widget(form.description) }}
                </div>
            </div>
            <div class="row">
                <div class="col s12">
                    <input class="btn btn-small green" type="submit">
                </div>
            </div>
            {{ form_end(form) }}
    </div>
{% endblock %}
